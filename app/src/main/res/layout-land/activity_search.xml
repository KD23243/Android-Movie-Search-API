<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextMovieName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/textbox"
        android:gravity="center"
        android:hint="Enter Movie Name"
        android:textColor="@color/textBox"
        android:textColorHint="#888"
        android:textSize="15dp" />

    <Button
        android:id="@+id/retrieveMovieButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/button"
        android:fontFamily="sans-serif"
        android:text="Retrieve Movie"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/saveMovieButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button"
        android:text="Save movie to Database"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:textSize="15sp" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_gravity="center"
        android:layout_width="600dp"
        android:layout_height="120dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/movieDetailsTextView"
                android:layout_width="600dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>